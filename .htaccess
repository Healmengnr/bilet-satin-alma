ErrorDocument 404 /404.php
ErrorDocument 403 /403.php

# Path traversal koruması
RewriteCond %{QUERY_STRING} \.\./ [NC]
RewriteRule .* - [F,L]
RewriteCond %{QUERY_STRING} \.\.\\ [NC]
RewriteRule .* - [F,L]
RewriteCond %{QUERY_STRING} \.\.%2f [NC]
RewriteRule .* - [F,L]
RewriteCond %{QUERY_STRING} \.\.%5c [NC]
RewriteRule .* - [F,L]

# SQL injection koruması
RewriteCond %{QUERY_STRING} (union|select|insert|delete|update|drop|create|alter|exec|script) [NC]
RewriteRule .* - [F,L]

# XSS koruması
RewriteCond %{QUERY_STRING} (<|%3C).*script.*(>|%3E) [NC]
RewriteRule .* - [F,L]
RewriteCond %{QUERY_STRING} (javascript|vbscript|onload|onerror) [NC]
RewriteRule .* - [F,L]

# Search.php için özel izin - Türkçe karakterlere izin ver
RewriteCond %{REQUEST_URI} ^/search\.php$ [NC]
RewriteRule .* - [S=1]

RewriteCond %{REQUEST_URI} ^/book-ticket\.php$ [NC]
RewriteCond %{QUERY_STRING} !^id=[a-zA-Z0-9\-]*$ [NC]
RewriteRule .* - [F,L]

RewriteCond %{REQUEST_URI} ^/trip-details\.php$ [NC]
RewriteCond %{QUERY_STRING} !^id=[a-zA-Z0-9\-]*$ [NC]
RewriteRule .* - [F,L]

RewriteCond %{REQUEST_URI} ^/dashboard/ [NC]
RewriteCond %{QUERY_STRING} !^$ [NC]
RewriteRule .* - [F,L]

RewriteCond %{REQUEST_URI} ^/api/ [NC]
RewriteCond %{QUERY_STRING} [^a-zA-Z0-9_\-\.\=\&\?\/\s] [NC]
RewriteRule .* - [F,L]

RewriteCond %{REQUEST_URI} ^/(index|login|register|profile|tickets)\.php$ [NC]
RewriteCond %{QUERY_STRING} !^$ [NC]
RewriteRule .* - [F,L]

<Files "*.sql">
    Order allow,deny
    Deny from all
</Files>

<Files "*.log">
    Order allow,deny
    Deny from all
</Files>

<Files "config.php">
    Order allow,deny
    Deny from all
</Files>

php_flag display_errors Off
php_flag log_errors On

<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/pdf "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>

<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

RewriteEngine On

